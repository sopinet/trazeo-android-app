<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sopinet.trazeo.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sopinet.trazeo.app.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sopinet.trazeo.app.InitActivity_"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_init"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sopinet.trazeo.app.LoginSimpleActivity_"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/title_activity_login_simple" >
        </activity>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>
