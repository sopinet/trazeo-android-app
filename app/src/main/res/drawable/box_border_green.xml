<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/green_trazeo_5"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/green_trazeo_5"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/gray_light" />
            <stroke
                android:width="2dp"
                android:color="@color/green_trazeo_0"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/green_trazeo_0"/>
        </shape>
    </item>
</selector>