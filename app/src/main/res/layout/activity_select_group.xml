<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sopinet.trazeo.app.SelectGroupActivity">

    <LinearLayout
        android:id="@+id/groups_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/btnSearch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/new_group_selector"
            android:textStyle="bold"
            android:clickable="true"
            android:text="Busca pedibuses en tu ciudad"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:padding="10dp"/>

        <ListView
            android:id="@+id/listSelectGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0sp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp">
        </ListView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_groups_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btnBegin"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/new_group_selector"
            android:textStyle="bold"
            android:text="Empieza"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/no_groups_help"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:clickable="true"
                android:src="@drawable/question3"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
