<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_gray"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:background="@drawable/white_rounded_box"
        android:orientation="vertical"
        android:padding="15dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="clip_horizontal"
            android:text="@string/change_password_title"
            android:textColor="@color/green_trazeo_5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17dip" />

        <EditText
            android:id="@+id/mysettings_passwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:hint="@string/passwd"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />

        <EditText
            android:id="@+id/mysettings_confirm_passwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_passwd"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip">

            <TextView
                android:id="@+id/passwdOkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:clickable="true"
                android:text="@string/send"
                android:textColor="@color/button_text_green_orange"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="right|end" />

            <TextView
                android:id="@+id/passwdCancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip"
                android:clickable="true"
                android:text="@string/cancel"
                android:textColor="@color/button_text_green_orange"
                android:textSize="14sp"
                android:textStyle="bold"
                android:gravity="right|end" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>