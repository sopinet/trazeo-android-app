<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_selector"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:paddingBottom="25dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="@string/app_name"
            android:textColor="#666"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/spinBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="8"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spinImage"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:src="@drawable/more_icon" />

            <Spinner
                android:id="@+id/groupOptions"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="15dip"
        android:background="@color/green_trazeo_2_transparent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:id="@+id/llInitRide"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:id="@+id/initRideImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/init_ride_icon" />

            <TextView
                android:id="@+id/initRideButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:text="@string/init_ride"
                android:textSize="13sp"
                android:textColor="@color/button_text_green_orange"
                android:textStyle="bold"
                android:gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llChat"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:paddingRight="5dp"
            android:paddingEnd="10dp"
            android:clickable="true">

            <ImageView
                android:id="@+id/chatImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/chat_icon" />

            <TextView
                android:id="@+id/chatButton"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="5dp"
                android:text="@string/chat_button"
                android:textSize="13sp"
                android:textColor="@color/button_text_green"
                android:textStyle="bold"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>