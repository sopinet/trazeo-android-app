<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/citiesForm"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"
            android:gravity="center"
            android:text="Busca pedibuses que ya estÃ©n caminando en tu ciudad"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/citiesSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"
            android:prompt="@string/visibility_prompt" />

        <Button
            android:id="@+id/btnSearchGroups"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="#cbca20"
            android:text="@string/search_btn"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSeeAll"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:background="#cbca20"
            android:text="@string/see_all_btn"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/groupsListLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ListView
            android:id="@+id/groupsList"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10.0sp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp">
        </ListView>

    </LinearLayout>

</LinearLayout>